<!-- pages/task_flow/my_tasks/my_tasks.wxml -->
<nav-bar isBack="{{true}}">
    <view slot="backText">返回</view>
    <view slot="content">我的任务</view>
</nav-bar>
<view class="wrap">
    <view class="title-wrap">
        <view class="block"></view>
        <view class="block">
            <view class="tf-name">{{tf_name}}</view>
        </view>
        <view class="block">
            <view class="person">任务人:{{u_name}}</view>
        </view>
    </view>
    <view wx:if="{{myTasks.length}}" class="tasks">
        <view class="item shadow solid-left solid-right" wx:for="{{myTasks}}" wx:key>
            <view bind:tap="taskDetail" data-tid="{{item.id}}">
                <view class="b1">
                    <view class="name">{{item.t_name}}</view>
                    <view class="cu-tag line-main sm margin-left">
                        <view class="icon-group"></view>
                        <view class="text">{{item.members.length}}</view>
                    </view>
                </view>
                <view class="deadline">截止到:{{item.end_time}}</view>
                <view class="t-describe">{{item.t_describe}}</view>
            </view>
            <view class="btn-group">
                <view class="cu-btn sm margin-right-sm bg-main" wx:if="{{item.myStatus === 1 && index != showInputIndex}}" catch:tap="completeTask" data-tid="{{item.id}}">
                    完成
                </view>
                <view class="cu-btn sm margin-right-sm bg-green" wx:if="{{item.myStatus === 1 && index != showInputIndex}}" catch:tap="applyBreak" data-idx="{{index}}" data-tid="{{item.id}}">
                    请假
                </view>
                <view class="cu-btn sm margin-right-sm bg-grey" wx:if="{{item.myStatus === 2 && index != showInputIndex}}">
                    已完成
                </view>
                <view class="cu-btn sm margin-right-sm bg-grey" wx:if="{{item.myStatus === 3 && index != showInputIndex}}">
                    请假中
                </view>
                <view class="cu-btn sm margin-right-sm bg-red" wx:if="{{item.myStatus === 0 && index != showInputIndex}}">
                    已请假
                </view>
                <view class="break-reason" wx:if="{{index === showInputIndex}}">
                    <input placeholder="请输入请假理由" bindinput="inputChange" />
                    <view class="cu-btn sm margin-left-sm round bg-main" catch:tap="sendApply"><text class="icon-check text-white"></text></view>
                    <view class="cu-btn sm margin-left-sm round bg-main" catch:tap="cancelApply"><text class="icon-close text-white"></text></view>
                </view>
            </view>
        </view>
    </view>
    <view wx:else class="empty-task-show">您还没有任务</view>
</view>