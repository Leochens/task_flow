            </picker>
        </view>
        <view class="task-item">
            <label class='tips'>负责人</label>
            <input type='text' value="RyanHardy"></input>
        </view>
        <view class="task-item">
            <label class='tips'>联系电话[选填]</label>
            <input type='text' value=""></input>
        </view>
        <view class="task-item">
            <label class='tips'>任务概要</label>
            <textarea value=""></textarea>
        </view>
