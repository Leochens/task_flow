<nav-bar navbar-data="{{navbarData}}" />
<view class='container' style="margin-top:{{height}}rpx;">
  <navigator class='action border-custom' open-type="navigateBack" delta="1" hover-class="none" style='width:{{Custom.width}}px;height:{{Custom.height}}px;margin-left:calc(750rpx - {{Custom.right}}px)'>
    <text class='icon-back'></text>
    <text class='icon-homefill'></text>
  </navigator>
  <!-- Tab布局 -->
  <view class='title'>
    <view class='titleSel' bindtap='titleClick' data-idx='0'>
      <text>进行中</text>
      <hr class="{{0 == currentIndex ? 'headerLineSel' : 'headerLineUnsel'}}" />
    </view>
    <view class='titleSel' bindtap='titleClick' data-idx='1'>
      <text>已完成</text>
      <hr class="{{1 == currentIndex ? 'headerLineSel' : 'headerLineUnsel'}} " />
    </view>
  </view>
  <!-- 内容布局 -->
  <swiper class='swiper' bindchange='pagechange' current='{{currentIndex}}'>
    <!-- 进行中 -->
    <swiper-item class='swiper'>
      <task-flow-card wx:for="{{taskFlowList}}" wx:key="{{key}}" taskFlowData="{{item}}" bindtap='toTaskFlowDetail' />
      <view style='height:100rpx'> </view>

    </swiper-item>
    <!-- 已完成 -->
    <swiper-item class='swiper' class='swiper'>

      <task-flow-card wx:for="{{completedTaskFlowList}}" wx:key="{{key}}" taskFlowData="{{item}}" bindtap='toTaskFlowDetail' />
    </swiper-item>
    <view style='height:100rpx'> </view>
  </swiper>
  <view class='hover-btn' bindtap='addNewTaskFlow'>
    <image src='../../assets/imgs/index/add_task.png'></image>
  </view>
</view>