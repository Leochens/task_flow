/* components/search_bar/search_bar.wxss */

.search-bar-wrap{
    height: auto;
    display: block;
    width: 90%;
    margin: auto;
}

.search-bar-wrap input{
    border: 1rpx solid #eee;
    border-radius: 8rpx;
    width: 100%;
    height: 65rpx;
    display: inline-block;
    padding: 0 10rpx;
    transition: width .3s ease-in-out;
    font-size: 30rpx;

    
}
.search-bar-wrap button{
    height: 100%;
    border: none;
    /* background-color: #2262AD; */
    padding: 0;
    color: #666;
    display: inline-block;
    width: 0;
    line-height: 65rpx;
    transition: width .3s ease-in-out;
}

.search-bar-wrap button image{
    height: 45rpx;
    width: 45rpx;
    margin: -12rpx 3rpx;
}